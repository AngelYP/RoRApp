<div class="container">
    <div class="row">
        <div class="col-sm">
            <%= form_for @daily do |f| %>

                <%= f.label :positives %>
                <%= f.number_field :positives, class:"form-control" %>

                <%= f.label :deaths %>
                <%= f.number_field :deaths, class:"form-control" %>

                <%= f.label :suspects %>
                <%= f.number_field :suspects, class:"form-control" %>
                
                <%= f.label :negatives %>
                <%= f.number_field :negatives, class:"form-control" %>

                <br>
                <%= f.submit "Registrar nuevos datos", :class => "btn btn-primary" %>

            <% end %>
        </div>
    </div>
</div>